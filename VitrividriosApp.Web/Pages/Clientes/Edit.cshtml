@page
@model VitrividriosApp.Web.Pages.Clientes.EditModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="mb-4">Editar Cliente</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-success text-white text-center py-3">
                <h3 class="fw-light my-2">Información del Cliente</h3>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Cliente.Id" />

                    <div class="form-floating mb-3">
                        <input asp-for="Cliente.Nombre" class="form-control" placeholder="Nombre del Cliente" />
                        <label asp-for="Cliente.Nombre">Nombre</label>
                        <span asp-validation-for="Cliente.Nombre" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Cliente.Direccion" class="form-control" placeholder="Dirección del Cliente" />
                        <label asp-for="Cliente.Direccion">Dirección</label>
                        <span asp-validation-for="Cliente.Direccion" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Cliente.Celular" class="form-control" placeholder="Número de Celular" />
                                <label asp-for="Cliente.Celular">Celular</label>
                                <span asp-validation-for="Cliente.Celular" class="text-danger mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            @* Alinea el checkbox verticalmente *@
                            <div class="form-check form-switch mb-3">
                                @* Usamos form-switch para un checkbox moderno *@
                                <input class="form-check-input" type="checkbox" role="switch" id="@Html.IdFor(model => model.Cliente.EsMayorista)" asp-for="Cliente.EsMayorista" />
                                <label class="form-check-label" for="@Html.IdFor(model => model.Cliente.EsMayorista)">@Html.DisplayNameFor(model => model.Cliente.EsMayorista)</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="Index" class="btn btn-secondary btn-lg">
                            <i class="fa fa-arrow-left me-2"></i> Volver a la Lista
                        </a>
                        <button type="submit" value="Guardar Cambios" class="btn btn-success btn-lg shadow-sm">
                            <i class="fa fa-save me-2"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}