@page
@model VitrividriosApp.Web.Pages.Productos.CreateModel

@{
    ViewData["Title"] = "Crear Producto";
}

<h1>Crear Nuevo Producto</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Producto.Nombre" class="control-label"></label>
                        <input asp-for="Producto.Nombre" class="form-control" />
                        <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Producto.Descripcion" class="control-label"></label>
                        <textarea asp-for="Producto.Descripcion" class="form-control"></textarea>
                        <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label asp-for="Producto.PrecioUnitario" class="control-label"></label>
                                <input asp-for="Producto.PrecioUnitario" class="form-control" />
                                <span asp-validation-for="Producto.PrecioUnitario" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3">
                                <label asp-for="Producto.PrecioMayorista" class="control-label"></label>
                                <input asp-for="Producto.PrecioMayorista" class="form-control" />
                                <span asp-validation-for="Producto.PrecioMayorista" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3">
                                <label asp-for="Producto.Stock" class="control-label"></label>
                                <input asp-for="Producto.Stock" class="form-control" />
                                <span asp-validation-for="Producto.Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Crear Producto" class="btn btn-primary" />
                        <a asp-page="Index" class="btn btn-secondary">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}