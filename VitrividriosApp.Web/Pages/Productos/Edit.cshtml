@page
@model VitrividriosApp.Web.Pages.Productos.EditModel

@{
    ViewData["Title"] = "Editar Producto";
}

<h1 class="mb-4">Editar Producto</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-primary text-white text-center py-3">
                <h3 class="fw-light my-2">Información del Producto</h3>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Producto.Id" /> <div class="form-floating mb-3">
                        <input asp-for="Producto.Nombre" class="form-control" placeholder="Nombre del Producto" />
                        <label asp-for="Producto.Nombre">Nombre</label>
                        <span asp-validation-for="Producto.Nombre" class="text-danger mt-1 d-block"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Producto.Descripcion" class="form-control" placeholder="Descripción del Producto" style="height: 100px"></textarea>
                        <label asp-for="Producto.Descripcion">Descripción</label>
                        <span asp-validation-for="Producto.Descripcion" class="text-danger mt-1 d-block"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Producto.PrecioUnitario" class="form-control" placeholder="Precio Unitario" />
                                <label asp-for="Producto.PrecioUnitario">Precio Unitario</label>
                                <span asp-validation-for="Producto.PrecioUnitario" class="text-danger mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Producto.PrecioMayorista" class="form-control" placeholder="Precio Mayorista" />
                                <label asp-for="Producto.PrecioMayorista">Precio Mayorista</label>
                                <span asp-validation-for="Producto.PrecioMayorista" class="text-danger mt-1 d-block"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Producto.Stock" class="form-control" placeholder="Stock Disponible" />
                                <label asp-for="Producto.Stock">Stock</label>
                                <span asp-validation-for="Producto.Stock" class="text-danger mt-1 d-block"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="Index" class="btn btn-secondary btn-lg">
                            <i class="fa fa-arrow-left me-2"></i> Volver a la Lista
                        </a>
                        <button type="submit" value="Guardar Cambios" class="btn btn-success btn-lg shadow-sm">
                            <i class="fa fa-save me-2"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-e91G6FjFf7qfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFfFf" crossorigin="anonymous">
}