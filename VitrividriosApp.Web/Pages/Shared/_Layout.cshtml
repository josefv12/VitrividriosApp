<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VitrividriosApp.Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VitrividriosApp.Web.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="fa fa-gem me-2 fs-4 text-info"></i>
                    <span class="fw-bold fs-5">VitrividriosApp</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item me-3">
                            <a class="nav-link text-white" asp-area="" asp-page="/Productos/Index">
                                <i class="fa fa-boxes me-1"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-white" asp-area="" asp-page="/Clientes/Index">
                                <i class="fa fa-users me-1"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            @* Enlace para Historial de Ventas *@
                            <a class="nav-link text-white" asp-area="" asp-page="/Ventas/Index">
                                <i class="fa fa-history me-1"></i> Historial de Ventas
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            {{!-- Nuevo enlace para Cotizaciones --}}
                            <a class="nav-link text-white" asp-area="" asp-page="/Cotizaciones/Index">
                                <i class="fa fa-file-invoice-dollar me-1"></i> Cotizaciones
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success text-white px-3 py-2 rounded-pill shadow-sm" asp-area="" asp-page="/Ventas/Index">
                                <i class="fa fa-cash-register me-1"></i> Nueva Venta
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VitrividriosApp.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>